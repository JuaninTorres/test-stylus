@import 'nib'
@import 'normalize'

// Variables
$font-size-principal = 16px
$color-texto = orange
$color-fondo = blue

// Mixins
// border-radius(n)
//     -webkit-border-radius n
//     -moz-border-radius n
//     -o-border-radius n
//     -ms-border-radius n
//     border-radius n
//////////////////////////////

body
    color $color-texto
    margin 1em
    font-size $font-size-principal

p
    border 0.2em dotted black
    padding 0.3em 2em
    transition: all 1000ms
    &.redondeado
        background $color-fondo
        border 0.2em solid black
        border-radius 4em
        box-shadow 0.2em 0.2em 0.4em rgba(0,0,0,0.5)
        font-size ($font-size-principal * 2)
        &:hover
            background (($color-fondo + 30%) - 60deg)
            border 0.2em red solid
            border-radius 0
            color (($color-texto - 30%) + 60deg)
            text-shadow 0.1em 0.1em 0.2em rgba(0,0,0,0.5)
