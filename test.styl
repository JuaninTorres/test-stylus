body {
  color: #ffa500;
  margin: 1em;
  font-size: 16px;
}
p {
  border: 0.2em dotted #000;
  padding: 0.3em 2em;
  transition: all 1000ms;
}
p.redondeado {
  background: #00f;
  border: 0.2em solid #000;
  border-radius: 4em;
  box-shadow: 0.2em 0.2em 0.4em rgba(0,0,0,0.5);
  font-size: 32px;
}
p.redondeado:hover {
  background: #4dffff;
  border: 0.2em #f00 solid;
  border-radius: 0;
  color: #40b300;
  text-shadow: 0.1em 0.1em 0.2em rgba(0,0,0,0.5);
}
